#!/bin/sh

if [ $# -lt 1 ]; then
	echo "File name is needed!"
	exit 1
fi

filename=$1
FILENAME=$(echo $filename | tr 'a-z' 'A-Z')
creator="Isaac"


write_file_head(){
    currTime=$(date +"%Y-%m-%d %T") 
    echo "/************************************" >> $1
    echo "/* FileName : $1" >> $1
    echo "/* CreatTime: $currTime" >> $1
    echo "/* Create by: $2" >> $1
    echo "/************************************/" >> $1
    echo "" >> $1
}

write_cpp_file(){
	echo "#include <iostream>" >> $1.cpp
	echo "#include \"$1.h\"" >> $1.cpp
	echo "" >> $1.cpp
	echo "using namespace std;" >> $1.cpp
	echo "" >> $1.cpp
	echo "int main(int argc, char* argv[]) {" >> $1.cpp
	echo "" >> $1.cpp
	echo "    return 0;" >> $1.cpp
	echo "}" >> $1.cpp
	echo "" >> $1.cpp
}

write_h_file(){
	echo "#ifndef $2_H" >> $1.h
	echo "#define $2_H" >> $1.h
	echo "" >> $1.h
	echo "" >> $1.h
	echo "#endif // $2_H" >> $1.h
	echo "" >> $1.h
}


if [ -e $filename.cpp ] || [ -e $filename.h ]; then
	echo "File has exist!"
	exit 1
else
	touch $filename.cpp
	if [ $filename != "main" ]; then
		touch $filename.h
	fi
fi

write_file_head $filename.cpp $creator
write_cpp_file $filename
if [ $filename != "main" ]; then
	write_file_head $filename.h $creator
	write_h_file $filename $FILENAME
fi
exit 0
